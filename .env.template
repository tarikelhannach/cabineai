# CabineAI Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="CabineAI - Sistema Judicial Digital"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# For Docker PostgreSQL (recommended for development):
DATABASE_URL=postgresql://justicia:CHANGE_ME_SECURE_PASSWORD@localhost:5432/justicia_db

# For production (managed database):
# DATABASE_URL=postgresql://username:password@your-db-host:5432/database_name

POSTGRES_DB=justicia_db
POSTGRES_USER=justicia
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================
# ELASTICSEARCH
# ============================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_PASSWORD=

# ============================================
# SECURITY (CRITICAL - CHANGE THESE!)
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_MINIMUM_32_CHARACTERS_REQUIRED

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS & ALLOWED HOSTS
# ============================================
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Production (uncomment and update):
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# SMTP EMAIL CONFIGURATION
# ============================================
# Gmail (recommended for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_TLS=true

# SendGrid (alternative)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_TLS=true

# Mailgun (alternative)
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@your-domain.mailgun.org
# SMTP_PASSWORD=your-mailgun-smtp-password
# SMTP_TLS=true

# ============================================
# CELERY
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# MONITORING (Development Only)
# ============================================
FLOWER_USER=admin
FLOWER_PASSWORD=change-me-secure-password

GRAFANA_ADMIN_PASSWORD=change-me-secure-password
GRAFANA_ROOT_URL=http://localhost:3000

# ============================================
# MOROCCO-SPECIFIC SETTINGS
# ============================================
MOROCCO_TIMEZONE=Africa/Casablanca
DEFAULT_LANGUAGE=ar
OCR_LANGUAGES=ara+fra+spa

# ============================================
# FEATURES
# ============================================
ENABLE_AUDIT_LOGGING=true
ENABLE_MONITORING=true
HSM_TYPE=software_fallback

# For production HSM (uncomment and configure):
# HSM_LIBRARY_PATH=/usr/lib/hsm/libhsm.so
# HSM_PIN=your-hsm-pin

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:8000

# Production (uncomment and update):
# VITE_API_URL=https://api.yourdomain.com

# ============================================
# INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.template .env
# 2. Update all "CHANGE_ME" values
# 3. Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. For Gmail SMTP: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
# 5. Never commit .env to version control (already in .gitignore)
